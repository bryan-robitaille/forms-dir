{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@lib/*": ["lib/*"],
      "@public/*": ["public/*"],
      "@i18n": ["i18n"],
      "@i18n/*": ["i18n/*"],
      "@types/*": ["types/*"],
      "@clientComponents/*": ["globals/client/*"],
      "@serverComponents/*": ["globals/server/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/[locale]/profile/[[...profileId]]/components/OrgChart/server/lib/func.ts",
    "app/[locale]/profile/[[...profileId]]/components/OrgChart/server/lib/nrc_orgchart_placement.ts",
    "src/components/profile/OrgChart/algorithm/nrc_orgchart_placement.js"
  ],
  "exclude": ["node_modules"]
}
